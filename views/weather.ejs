<%- include ('partials/header'); %>

    <nav>
        <div class="container-fluid">
            <div class="d-flex justify-content-around p-3 align-items-center">
                <div>
                    <img class="img-fluid" src="/images/sun.png" alt="logo" height="75px" width="75px">
                </div>
                <div>
                    <h1>My Weather App</h1>
                </div>
            </div>
        </div>
    </nav>

    <main>
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <div>
                        <h4>The Temperature is <%= weatherData.temp %> °C</h4>
                    </div>
                    <div>
                        <h4>Feels Like <%= weatherData.feelLike %> °C </h4>
                    </div>
                    <div>
                        <h4>Min. Temperature : <%= weatherData.min_temp%>
                                </h3>
                                <h4>Min. Temperature : <%= weatherData.max_temp%>
                                        </h3>
                                        <h4>Visibility : <%= weatherData.visibility%>
                                                </h3>
                    </div>
                </div>
                <div class="col">
                    <div>
                        <img src="<%= weatherData.imageUrl %>" alt="image">
                        <%= weatherData.description %>
                    </div>

                    <div>
                        <h4>Sunrise : <%= weatherData.sunrise%>
                                </h3>
                                <h4>Sunset : <%= weatherData.sunset%>
                                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </main>


    <%- include ('partials/footer'); %>